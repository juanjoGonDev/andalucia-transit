{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@core/*": ["src/app/core/*"],
      "@data/*": ["src/app/data/*"],
      "@domain/*": ["src/app/domain/*"],
      "@features/*": ["src/app/features/*"],
      "@root/package.json": ["package.json"],
      "@shared/*": ["src/app/shared/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
