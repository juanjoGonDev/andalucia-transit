{
  "name": "andalucia-transit",
  "version": "0.0.1",
  "scripts": {
    "prepare": "node scripts/dev/prepare.mjs",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:scripts && npm run test:angular && npm run test:playwright",
    "test:angular": "node scripts/dev/run-angular-tests.mjs",
    "test:scripts": "node scripts/run-tests.cjs",
    "test:playwright": "playwright test",
    "snapshot": "tsx scripts/snapshot/run.ts",
    "start:snapshot": "node scripts/dev/start-with-snapshot.mjs",
    "lint": "npm run lint:unused && npm run lint:deps && npm run lint:workflows && npm run lint:staged",
    "lint:unused": "ng lint",
    "lint:deps": "depcheck --skip-missing --ignores=tslib,@angular/build,@angular/compiler-cli,@cypress/schematic,@messageformat/core,eslint-import-resolver-typescript,jasmine-core,karma,karma-chrome-launcher,karma-coverage,karma-jasmine,karma-jasmine-html-reporter,lefthook",
    "lint:staged": "eslint --cache --fix",
    "lint:workflows": "tsx scripts/dev/lint-workflows.ts",
    "verify:all": "npm run lint && npm run test -- --watch=false && npm run build && npm run snapshot",
    "setup:environment": "tsx scripts/dev/setup-environment.ts",
    "e2e": "ng e2e",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:visual": "cypress run --spec cypress/e2e/visual-regression.cy.ts --browser chrome --headless",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy:prepare": "tsx scripts/deploy/run.ts",
    "test:deploy": "npm run deploy:prepare",
    "screenshot": "node scripts/screenshot.js"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20.19.0 <21"
  },
  "dependencies": {
    "@angular/animations": "^20.3.6",
    "@angular/cdk": "^20.2.9",
    "@angular/common": "^20.3.6",
    "@angular/compiler": "^20.3.6",
    "@angular/core": "^20.3.6",
    "@angular/forms": "^20.3.6",
    "@angular/material": "^20.2.9",
    "@angular/platform-browser": "^20.3.6",
    "@angular/router": "^20.3.6",
    "@angular/service-worker": "^20.3.6",
    "@messageformat/core": "^3.4.0",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "leaflet": "^1.9.4",
    "luxon": "^3.7.2",
    "ngx-translate-messageformat-compiler": "^7.2.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.6",
    "@angular/cli": "^20.3.6",
    "@angular/compiler-cli": "^20.3.6",
    "@cypress/schematic": "^4.1.4",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@types/jasmine": "~5.1.12",
    "@types/leaflet": "^1.9.21",
    "@types/luxon": "^3.7.1",
    "@types/pixelmatch": "^5.2.6",
    "actionlint": "^2.0.6",
    "angular-eslint": "20.4.0",
    "cli-table3": "^0.6.5",
    "cypress": "^15.5.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "glob": "^11.0.3",
    "jasmine-core": "~5.12.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lefthook": "^2.0.0",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.56.1",
    "pngjs": "^7.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.46.2"
  },
  "volta": {
    "node": "20.19.0"
  }
}
